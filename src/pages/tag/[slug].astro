---
import { ghostClient } from "../../lib/ghost";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";

const tags = await ghostClient.tags.browse({
  limit: "all",
});
---

<!DOCTYPE html>
<html lang="en">
  {
    tags.map((tag) => (
      <>
        <head>
          <title>{tag.name}</title>
        </head>
        <body>
          <Nav />
          <img class="h-full w-full" src={tag.feature_image} alt={tag.name} />

          <h1 class="text-black">{tag.name}</h1>
          <p class="text-black">{tag.description}</p>
          <Footer />
        </body>
      </>
    ))
  }

</html>
